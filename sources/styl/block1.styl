.block1
  width 100%
  height 450px
  background-image url("img/block1-bg.png")
  background-size cover
  background-position center
  background-repeat no-repeat
  position relative
  @media (min-width t-screen)
    height auto
  @media (min-width d-screen)
    background-image none

  .bg-mask
    display none
    @media (min-width d-screen)
      display block
      width 100%
      height 638px
      position absolute
      top 0
      left 0
      background-color #0c0b10
      opacity 0.3
      z-index 0

  .bgvideo
    position fixed
    right 0
    top -20%
    min-width 100%
    min-height 100%
    width auto
    height auto
    z-index -3
    @media (min-width d-screen)
      min-height 108%

  .block1-content
    width 100%
    height auto
    padding-top 80px
    box-sizing border-box
    justify-content center
    align-items center
    flex-direction column
    z-index 1
    @media (min-width t-screen)
      flex-direction row
      padding-top 120px
      padding-bottom 47px
    @media (min-width d-screen)
      padding-top 168px
      padding-bottom 108px
      justify-content space-between


    .block1-head
      width 100%
      height auto
      margin-bottom 48px
      z-index 2
      @media (min-width t-screen)
        width 56%
        margin-right 30px
      @media (min-width d-screen)
        width 62%



      h1
        color #ffffff
        font-family Geometria
        font-size 26px
        font-weight 300
        line-height 31px
        text-align center
        margin-bottom 24px
        @media (min-width t-screen)
          text-align left
          margin-bottom 40px
          font-size 31px
          line-height 37px
        @media (min-width d-screen)
          font-size 40px
          line-height 45px

      .logo-conteiner
        width 90%
        height auto
        margin 0 auto
        @media (min-width t-screen)
          width 100%
        @media (min-width d-screen)
          width 68%
          margin-left 0



        img
          width 100%
          height auto

    form
      width 290px
      height auto
      box-shadow 0 5px 15px rgba(0, 0, 0, 0.1)
      border-radius 4px
      background-color #ffffff
      padding 32px 25px
      box-sizing border-box
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      z-index 2


      p
        color #555555
        font-family Geometria
        font-size 14px
        line-height 16px
        text-align center
        margin-bottom 32px

      input
        margin-bottom 16px

      button
        margin-bottom 10px

      .polit
        font-size 10px
        margin-bottom 0





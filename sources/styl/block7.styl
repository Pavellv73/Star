.block7
  width 100%
  height auto
  background-color #4fc3ea
  position relative
  
  .map-bg
    width 100%
    height 100%
    background-image url("img/block7-map.png")
    background-size 100%
    background-position center
    background-repeat no-repeat
    position absolute
    top 0
    left 0
    opacity 0.3
    @media (min-width t-screen)
      background-size 78%
    @media (min-width d-screen)
      background-size 75%
      opacity 0.2

  .block7-content
    width 100%
    height auto
    justify-content center
    align-content center
    flex-direction column
    padding-top 32px
    padding-bottom 48px
    box-sizing border-box
    position relative
    @media (min-width t-screen)
      padding-bottom 0

    .block7-head
      width 100%
      height auto
      margin-bottom 32px
      @media (min-width t-screen)
        margin-bottom 57px
      @media (min-width d-screen)
        margin-bottom 96px

      h2
        color #ffffff
        font-family Geometria
        font-size 20px
        font-weight 300
        text-align center
        @media (min-width t-screen)
          font-size 24px
        @media (min-width d-screen)
          font-size 36px
          line-height 37px

    .region-block
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-content center


      .slick-prev-region, .slick-next-region
        display none!important
        cursor pointer
        @media (min-width t-screen)
          display block!important


      .slick-prev-region
        position absolute
        top 50%
        left 0
        width 39px 
        height 39px
        background-size 100%
        background-repeat no-repeat
        background-position center
        background-image url("img/prev-region.svg")
        @media (min-width d-screen)
          width 64px
          height 64px

      .slick-next-region
        position absolute
        top 50%
        right 0
        width 39px
        height 39px
        background-size 100%
        background-repeat no-repeat
        background-position center
        background-image url("img/next-region.svg")
        @media (min-width d-screen)
          width 64px
          height 64px

      .slick-slider
        width 100%
        height 270px
        overflow hidden
        @media (min-width t-screen)
          width 90%
          height 219px
        @media (min-width d-screen)
          height 350px

        .slick-slide
          width 100%
          height auto
          @media (min-width t-screen)
            display flex
            display -webkit-flex
            justify-content center
            align-content center
            flex-direction row
            padding-left 40px
            padding-right 40px
            box-sizing border-box

          .img-region
            display none
            @media (min-width t-screen)
              height 219px
              display flex
              display -webkit-flex
              justify-content flex-end
              align-content center
              margin-right 15px
            @media (min-width d-screen)
              height auto


            img
              width 176px
              height auto
              @media (min-width d-screen)
                width auto

          .text-region
            width 100%
            height auto

            .text-name
              width 100%
              height auto
              display flex
              display -webkit-flex
              justify-content flex-start
              align-content center
              flex-direction row
              margin-bottom 2px


              h3
                color #ffffff
                font-family Geometria
                font-size 24px
                font-weight 300
                text-transform uppercase
                text-align left
                margin-right 15px
                @media (min-width d-screen)
                  font-size 44px
                  line-height 45px

              img
                width 28px
                height 17px
                @media (min-width d-screen)
                  width 47px
                  height 28px
                  margin-top 10px

            .position
              width 100%
              height auto
              margin-bottom 24px
              @media (min-width d-screen)
                margin-bottom 40px

              p
                color #bfe3f0
                font-family Lato
                font-size 12px
                font-weight 500
                text-align left
                @media (min-width d-screen)
                  font-size 20px


            .region-text
              width 100%
              height auto

              p
                color #ffffff
                font-family Lato
                font-size 14px
                font-weight 400
                text-align left
                @media (min-width d-screen)
                  font-size 18px
                  font-weight 300



        .slick-dots
          display flex
          display -webkit-flex
          justify-content center
          align-items center
          flex-direction row
          width 100%
          height auto
          position relative
          bottom 0!important
          margin-top 15px
          @media (min-width t-screen)
            display none!important

          li
            display block
            width 8px
            height 8px
            border 1px solid #ffffff
            opacity 0.7
            border-radius 100%
            transition all 0.2s ease

            button
              display none

          li.slick-active
            background-color #ffffff
            transition all 0.2s ease

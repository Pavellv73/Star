    .hamburger
      padding 0

      .hamburger-box
        width 24px
        height 14px


        .hamburger-inner
          width 24px
          height 2px
          margin-top 0
          background-color #30d3ff
          @media (min-width t-screen)
            width 36px
          &:before
            width 24px
            height 2px
            top -8px
            background-color #30d3ff
            @media (min-width t-screen)
              width 36px
          &:after
            width 24px
            height 2px
            top -16px
            background-color #30d3ff
            @media (min-width t-screen)
              width 36px

    .menu
      display none
      width 110%
      height 100vh
      box-shadow 0 5px 12px rgba(0, 0, 0, 0.1)
      border-radius 4px
      background-color #ffffff
      padding-top 32px
      box-sizing border-box
      position absolute
      top 46px
      left -12px
      @media (min-width t-screen)
        height 60px
        width 744px
        padding-top 0
        top 74px
        left 0
        right 0
        margin auto
        border-radius 0 0 4px 4px
      @media (min-width d-screen)
        width 1050px

      .menu-content
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        flex-direction column
        @media (min-width t-screen)
          flex-direction row
          height 100%
          justify-content flex-start

        a
          @media (min-width t-screen)
            display none

        nav
          width 100%
          height auto
          display flex
          display -webkit-flex
          justify-content center
          align-items center
          flex-direction column
          margin-top 32px
          @media (min-width t-screen)
            flex-direction row
            margin-top 0
            width 87%
            justify-content space-between
          @media (min-width d-screen)
            justify-content center

          a
            color #5ac6eb
            font-family Geometria
            font-size 15px
            font-weight 400
            text-align center
            margin-bottom 20px
            display block
            transition all 0.2s ease

            &:hover
              color #4a8bae
            @media (min-width t-screen)
              font-size 14px
              margin-bottom 0
              margin-left 14px
              margin-right 14px
              position relative
              &:after
                content ""
                width 1px
                height 32px
                background-color #efefef
                position absolute
                top 0
                right -15px
                @media (min-width d-screen)
                  right -34px
            @media (min-width d-screen)
              margin-left 36px
              margin-right 36px


        .social-icon
          width 100%
          height auto
          display flex
          display -webkit-flex
          justify-content center
          align-items center
          flex-direction row
          margin-top 21px
          @media (min-width t-screen)
            width 13%
            justify-content space-between
            margin-top 0
          @media (min-width d-screen)
            max-width 96px

          a
            width 32px
            height 32px
            display flex
            display -webkit-flex
            justify-content center
            align-items center
            margin-right 10px
            margin-left 10px
            @media (min-width t-screen)
              width 20px
              height 20px
              margin-right 6px
              margin-left 6px


            img
              width 100%
              height auto

    .head-phone
      display none
      @media (min-width t-screen)
        display flex
        display -webkit-flex
        justify-content center
        align-items flex-start
        flex-direction column
      @media (min-width t-screen)
        font-size 20px

      a
        margin 0
        line-height 17px



#consultation-popup
  display none
  .consultatio
    display flex
    display -webkit-flex
    justify-content center
    align-items center
    flex-direction column
    form
      width 100%
      height auto
      background-color #ffffff
      padding 32px 25px
      box-sizing border-box
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column


      p
        color #555555
        font-family Geometria
        font-size 14px
        line-height 16px
        text-align center
        margin-bottom 32px
        text-align center

      input
        margin-bottom 16px

      button
        margin-bottom 15px

      .polit
        font-size 10px
        margin-bottom 0
        color #c1c1c1

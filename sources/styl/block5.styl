.block5
  width 100%
  height auto
  background-color #f5fafd

  .block5-content
    width 100%
    height auto
    justify-content center
    align-content center
    flex-direction column
    padding-bottom 48px
    box-sizing border-box

    .curs-slider
      width 100%
      height auto
      position relative
      display flex
      display -webkit-flex
      justify-content center
      align-content center



      .slick-prev, .slick-next
        position absolute
        z-index 1

      .slick-prev
        top 42%
        left 0
        width 16px
        height 24px
        background-image url("img/prev.svg")
        background-position center
        background-repeat no-repeat
        background-size 100%
        transform rotate(180deg)
        @media (min-width t-screen)
          left -10px
        @media (min-width d-screen)
          left 20px
          width 15px
          height 32px
        &:before
          display none

      .slick-next
        top 45%
        right 0
        width 16px
        height 24px
        background-image url("img/next.svg")
        background-position center
        background-repeat no-repeat
        background-size 100%
        @media (min-width t-screen)
          right -10px
        @media (min-width d-screen)
          right 20px
          width 15px
          height 32px
        &:before
          display none


      .slick-slider
        width 100%
        height 225px
        @media (min-width d-screen)
          width 90%

        .slick-slide
          width 100%
          height auto



          .slide-content
            width 236px
            height 224px
            margin 0 auto
            border-radius 3px
            background-color #ffffff
            box-shadow 0 5px 7px rgba(0, 0, 0, 0.1)
            transition all 0.2s ease
            &:hover
              box-shadow 0 5px 20px rgba(0, 0, 0, 0.1)
            @media (min-width t-screen)
              width 200px
              height 217px
            @media (min-width d-screen)
              width 95%


            .slide-head
              width 100%
              height auto
              padding-top 46px
              padding-bottom 42px
              box-sizing border-box
              background-image linear-gradient(180deg, #ffffff 0%, #ecf9fd 100%)

              p
                color #5c5c5c
                font-family Geometria
                font-size 18px
                font-weight 700
                text-align center

              h3
                color #4fbae7
                font-family Geometria
                font-size 22px
                font-weight 300
                text-align center

            .curs-info
              width 100%
              height auto
              display flex
              display -webkit-flex
              justify-content center
              align-content center
              padding 20px 0
              box-sizing border-box

              a
                color #24aedf
                font-family Lato
                font-size 15px
                font-weight 500
                letter-spacing 0.4px

        .slick-dots
          width 100%
          height auto

          li
            width 8px
            height 8px
            border 1px solid #5dc6ec
            opacity 0.7
            border-radius 100%
            transition all 0.2s ease
            button
              display none

          li.slick-active
            background-color #5dc6ec
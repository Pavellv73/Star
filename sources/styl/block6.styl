.block6
  width 100%
  height auto
  background-color #f7fcff
  background-image url("img/block6-bg.png")
  background-size 120%
  background-repeat no-repeat
  background-position 50% -5%
  @media (min-width t-screen)
    background-size 100%
    background-position 50% -95%
  @media (min-width d-screen)
    background-position 50% -303px


  .block6-content
    width 100%
    height auto
    justify-content center
    align-content center
    flex-direction column
    padding-top 48px
    padding-bottom 51px
    box-sizing border-box
    @media (min-width d-screen)
      padding-bottom 130px
      padding-top 88px

    .block6-head
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-content center
      flex-direction column
      margin-bottom 32px
      @media (min-width t-screen)
        margin-bottom 48px
      @media (min-width t-screen)
        margin-bottom 76px

      p
        color #5c5c5c
        font-family Geometria
        font-size 24px
        font-weight 300
        text-align center
        margin-bottom 12px
        @media (min-width t-screen)
          font-size 36px
          line-height 40px
          br
            display none
        @media (min-width t-screen)
          font-size 40px
          line-height 42px

      img
        width 292px
        height auto
        @media (min-width t-screen)
          width 371px
          margin auto
        @media (min-width t-screen)
          width 390px

    .video-text-content
      width 100%
      height auto
      @media (min-width d-screen)
        display flex
        display -webkit-flex
        justify-content space-between
        align-content center
        flex-direction row-reverse

      .block6-video
        width 100%
        height auto
        margin-bottom 24px
        @media (min-width t-screen)
          display flex
          display -webkit-flex
          justify-content center
          align-content center
          flex-direction row
          margin-bottom 32px
        @media (min-width d-screen)
          margin-bottom 0
          width 490px
          flex-direction column

        .big-video
          width 100%
          height auto
          @media (min-width t-screen)
            width 530px
            height auto
            margin-right 10px
          @media (min-width d-screen)
            margin-right 0
            margin-bottom 20px
            width 483px

          video
            width 100%
            height auto

        .mini-video
          display none
          @media (min-width t-screen)
            width auto
            display flex
            display -webkit-flex
            justify-content flex-start
            align-content flex-start
            flex-direction column
          @media (min-width d-screen)
            flex-direction row

          a
            width auto
            height auto
            

            img
              @media (min-width t-screen)
                width 169px
                height auto

              @media (min-width d-screen)
                margin-right 16px
                width 150px



      .block6-text
        width 100%
        height auto
        @media (min-width d-screen)
          width 58%

        .description-text
          width 100%
          height auto
          margin-bottom 24px
          @media (min-width t-screen)
            margin-bottom 32px
          @media (min-width d-screen)
            margin-bottom 43px

          p
            color #6f6f6f
            font-family Lato
            font-size 14px
            font-weight 400
            text-align left
            margin-bottom 8px
            &:last-child
              margin-bottom 0
            @media (min-width t-screen)
              font-size 18px
              line-height 20px
            @media (min-width d-screen)
              line-height 22px
              margin-bottom 12px
              &:last-child
                margin-bottom 0

        .hours-block
          width 100%
          height auto
          display flex
          display -webkit-flex
          justify-content center
          align-content center
          flex-direction row

          .hours
            width auto
            height auto
            position relative
            margin-right 12px
            @media (min-width t-screen)
              margin-right 25px
            &:before
              content ""
              width 1px
              height 100%
              background-color #5ac6eb
              position absolute
              top 0
              left -5px
              @media (min-width t-screen)
                left -15px

            p
              color #5ac6eb
              font-family Geometria
              font-size 20px
              margin-bottom 55px
              @media (min-width t-screen)
                margin-bottom 19px
                font-size 24px
              &:last-child
                margin-bottom 0

          .hours-text
            height auto
            width 238px
            @media (min-width t-screen)
              width auto

            p
              color #6f6f6f
              font-family Lato
              font-size 14px
              font-weight 400
              text-align left
              margin-bottom 12px
              @media (min-width t-screen)
                font-size 16px
                line-height 17px
                margin-bottom 26px
              &:last-child
                margin-bottom 0


#video-popup
  display none

  iframe
    width 100%
    height 300px
    @media (min-width t-screen)
      height 600px
.block4
  width 100%
  height auto
  background-color #f5fafd
  background-image url("img/block4-bg.png")
  background-size cover
  background-position top
  background-repeat no-repeat
  @media (min-width t-screen)
    background-size 100%
    background-position 50% -45%
    background-color #f7fcff
  @media (min-width d-screen)
    background-position 50% 50%
    background-size 66%


  .block4-content
    width 100%
    height auto
    padding-top 260px
    padding-bottom 50px
    box-sizing border-box
    justify-content center
    align-items center
    flex-direction column
    @media (min-width t-screen)
      padding-top 80px

    .block4-head
      width 100%
      height auto
      margin-bottom 24px
      @media (min-width t-screen)
        margin-bottom 64px

      h2
        margin-bottom 0

    .training-blocks
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      @media (min-width t-screen)
        flex-flow row wrap


      .training-block
        width 296px
        height 440px
        position relative
        border-radius 4px
        background-color #ffffff
        overflow hidden
        box-shadow 0 5px 20px rgba(0, 0, 0, 0.1)
        margin-bottom 24px
        @media (min-width t-screen)
          width 340px
          height 520px
          margin-bottom 16px
          margin-left 6px
          margin-right 6px
        @media (min-width d-screen)
          width 384px
          height 570px

        &:hover
          .training-text
            top 0

        .training-img
          width 100%
          height 316px
          display flex
          display -webkit-flex
          justify-content center
          align-items flex-start

          img
            width 100%
            height auto

        .training-text
          width 100%
          height 100%
          position absolute
          top 316px
          box-shadow 0 5px 20px rgba(0, 0, 0, 0.1)
          background-image linear-gradient(180deg, #ffffff 0%, #ecf9fd 100%)
          transition all 0.3s ease
          padding-top 20px
          padding-left 20px
          padding-right 20px
          padding-bottom 0
          box-sizing border-box
          display flex
          display -webkit-flex
          justify-content flex-start
          align-items center
          flex-direction column
          @media (min-width t-screen)
            top 362px
            padding-top 29px
            padding-left 26px
            padding-right 26px
            padding-bottom 0
          @media (min-width d-screen)
            top 410px

          p
            color #5c5c5c
            font-family Geometria
            font-size 15px
            font-weight 700
            text-align center
            margin-bottom 12px
            @media (min-width t-screen)
              font-size 18px
              margin-bottom 14px

          h3
            color #4fbae7
            font-family Geometria
            font-size 24px
            font-weight 300
            text-align center
            margin-bottom 22px
            @media (min-width t-screen)
              font-size 28px
              line-height 32px
              margin-bottom 32px

          .days-block
            width 100%
            height auto
            display flex
            display -webkit-flex
            justify-content space-around
            align-items center
            flex-direction row
            margin-bottom 10px
            @media (min-width t-screen)
              margin-bottom 32px

            .start-training, .time-training
              width 45%
              height auto

              p
                color #6f6f6f
                font-family Geometria
                font-size 14px
                text-align left
                font-weight 300
                margin-bottom 0

              span
                color #7b7c7c
                font-family Geometria
                font-size 22px
                font-weight 500
                text-align left

          ul
            width 94%
            height auto
            display flex
            display -webkit-flex
            justify-content center
            align-items center
            flex-direction column
            margin-bottom 20px
            @media (min-width t-screen)
              margin-bottom 35px


            li
              width 100%
              color #5dc6ec
              font-family Lato
              font-weight 500
              line-height 22px
              font-size 14px
              margin 0 auto

            a.link-arrow
              color #31c0e8
              font-family Lato
              font-size 18px
              font-weight 700
              letter-spacing 0.36px
              text-align center
              margin-top 20px
              transition 0.3s linear
              position relative
              &:after
                visibility hidden
                content " "
                width 20px
                height 20px
                background-image url("img/right-arrow.svg")
                background-repeat no-repeat
                background-position center
                position absolute
                top 0
                right -27px
                opacity: 0
                transition opacity 0.3s, visibility 0s linear 0.3s
              &:hover
                margin-left -25px
                &:after
                  visibility visible
                  transition all 0.3s ease
                  content " "
                  width 20px
                  height 20px
                  background-image url("img/right-arrow.svg")
                  background-repeat no-repeat
                  background-position center
                  position absolute
                  top 0
                  right -27px
                  opacity 1
                  transition-delay 0s
                




          .price-block
            width 115%
            height auto
            padding-top 5px
            box-sizing border-box
            background-color #ffffff
            display flex
            display -webkit-flex
            justify-content center
            align-items center
            flex-direction column
            @media (min-width t-screen)
              padding-top 20px
              width 116%
            @media (min-width d-screen)
              padding-top 32px
              padding-bottom 20px


            .price
              width 65%
              height auto
              display flex
              display -webkit-flex
              justify-content flex-start
              align-items flex-start
              flex-direction column
              margin 0 auto
              @media (min-width t-screen)
                width 40%
              @media (min-width d-screen)
                margin-bottom 15px

              p
                color #6f6f6f
                font-family Geometria
                font-size 14px
                margin-bottom 0

              span
                color #6f6f6f
                font-family Geometria
                font-size 25px
                font-weight 700
                margin-bottom 10px
                b
                  font-size 15px

            .blue-botton
              width 218px
              height 44px
              border-radius 5px
              background-color #3abedc
              border none
              color #ffffff
              font-family Lato
              font-size 15px
              font-weight 400
              cursor pointer
              transition all 0.3s ease
              &:hover
                background-color #31a3bd
              @media (min-width d-screen)
                margin-bottom 10px


            p
              color #5dc6ec
              font-family Lato
              font-size 13px
              font-weight 500
              line-height 22px
              text-align center
              margin-bottom 0






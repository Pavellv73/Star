.block11
  width 100%
  height auto
  background-color #f7fcff
  background-image url("img/block11-bg.png")
  background-size 216%
  background-position 50% 100px
  background-repeat no-repeat
  @media (min-width t-screen)
    background-size 100%
  @media (min-width d-screen)
    background-position 50% -8px


  .block11-content
    width 100%
    height auto
    justify-content center
    align-items center
    flex-direction column
    padding-top 200px
    padding-bottom 40px
    box-sizing border-box

    .block11-head
      width 100%
      height auto
      margin-bottom 24px

    .questions-answers-blocks
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column

      .questions-answers
        width 100%
        height auto
        border-radius 4px
        border 1px solid #31c0e8
        margin-bottom 10px
        padding 10px 20px
        box-sizing border-box
        position relative
        @media (min-width t-screen)
          max-width 784px
          &:after
            content ""
            position absolute
            top 15px
            right 36px
            width 8px
            height 16px
            background-image url("img/next.svg")
            background-size 100%
            background-repeat no-repeat
            transform rotate(90deg)
            transition all 0.2s ease


        .questions
          width 100%
          height auto
          cursor pointer

          p
            color #31c0e8
            font-family Geometria
            font-size 16px
            font-weight 500
            text-align left
            @media (min-width t-screen)
              font-size 18px
            @media (min-width d-screen)
              font-size 20px

        .answers
          width 100%
          height auto
          display none
          margin-top 12px

          p
            color #6f6f6f
            font-family Lato
            font-size 14px
            font-weight 400
            text-align left
            @media (min-width t-screen)
              font-size 16px
